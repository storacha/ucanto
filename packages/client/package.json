{
  "name": "@ucanto/client",
  "description": "UCAN RPC Client",
  "version": "0.5.4",
  "keywords": [
    "UCAN",
    "RPC",
    "IPLD",
    "JWT",
    "multicodec",
    "codec",
    "invocation"
  ],
  "files": [
    "src",
    "dist/src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/web3-storage/ucanto.git"
  },
  "homepage": "https://github.com/web3-storage/ucanto",
  "scripts": {
    "test:web": "playwright-test test/**/*.spec.js --cov && nyc report",
    "test:node": "c8 --check-coverage --branches 100 --functions 100 --lines 100 mocha test/**/*.spec.js",
    "test": "npm run test:node",
    "coverage": "c8 --reporter=html mocha test/test-*.js && npm_config_yes=true npx st -d coverage -p 8080",
    "typecheck": "tsc --build",
    "build": "tsc --build"
  },
  "dependencies": {
    "multiformats": "^9.6.4",
    "@ucanto/interface": "^0.6.2"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/chai": "^4.3.0",
    "@types/chai-subset": "^1.3.3",
    "mocha": "^9.2.2",
    "chai": "^4.3.6",
    "chai-subset": "^1.6.0",
    "playwright-test": "^7.3.0",
    "@web-std/fetch": "^4.1.0",
    "@web-std/file": "^3.0.2",
    "c8": "^7.11.0",
    "nyc": "^15.1.0",
    "typescript": "^4.7.2",
    "@ucanto/authority": "^0.4.4",
    "@ucanto/transport": "^0.6.2",
    "@ucanto/core": "^0.5.3"
  },
  "type": "module",
  "main": "src/lib.js",
  "types": "./dist/src/lib.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ],
      "dist/src/lib.d.ts": [
        "dist/src/lib.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/src/lib.d.ts",
      "import": "./src/lib.js"
    }
  },
  "c8": {
    "exclude": [
      "test/**",
      "dist/**"
    ]
  },
  "license": "(Apache-2.0 AND MIT)"
}
